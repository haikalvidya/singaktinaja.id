package logger

import (
	"encoding/json"
	"strings"
)

type JsonBody map[string]interface{}

func (h JsonBody) Byte() []byte {
	b, _ := json.Marshal(h)
	return b
}

func (h JsonBody) String() string {
	return string(h.Byte())
}

func (h JsonBody) EscapeString() string {
	return strings.ReplaceAll(h.String(), `"`, `\"`)
}
